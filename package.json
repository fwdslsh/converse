{
  "name": "@fwdslsh/converse",
  "version": "0.1.0",
  "description": "A lightweight MCP server providing voice capabilities (TTS/STT/conversation) using remote OpenAI-compatible APIs.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "converse": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile=converse",
    "build:all": "npm run build:darwin-arm64 && npm run build:linux-arm64 && npm run build:darwin-x64 && npm run build:linux-x64 && npm run build:windows-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile=converse-darwin-arm64",
    "build:linux-arm64": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile=converse-linux-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile=converse-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile=converse-linux-x64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile=converse-windows-x64.exe",
    "clean": "rm -f converse converse-* *.exe dist/*",
    "start": "node dist/index.js",
    "start:bun": "bun run dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "voice",
    "tts",
    "text-to-speech",
    "stt",
    "speech-to-text",
    "ai",
    "openai",
    "conversation"
  ],
  "author": "fwdslsh",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fwdslsh/core.git",
    "directory": "packages/converse"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}